        android:layout_marginLeft="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Digite aqui seu telefone"
        android:inputType="number"
        android:text="3366698544"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cadastroRGJogador4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastroRGJogador3" />

    <EditText
        android:id="@+id/cadastroRGJogador2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Digite aqui seu @android:string/defaultVoiceMailAlphaTag"
