        android:hint="Digite aqui seu @android:string/defaultVoiceMailAlphaTag"
        android:inputType="number"
        android:text="35"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cadastroRGJogador"
        app:layout_constraintEnd_toEndOf="parent"
